<Window x:Class="cSharpClient.AddOrRemoveContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cSharpClient"
        mc:Ignorable="d"
        Title="AddOrRemoveContact" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextAlignment="Center" Margin="10,243,0,0" TextWrapping="Wrap" Text="All Rights Reserved © For Mira And Daniel" VerticalAlignment="Top" Width="272"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.258,0.1"><Run Text="Please fill the information below."/></TextBlock>
        <Button x:Name="addButton" Content="Add Contact" HorizontalAlignment="Left" Margin="109,132,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
        <Button x:Name="removeButton" Content="Remove Contact" HorizontalAlignment="Left" Margin="109,157,0,0" VerticalAlignment="Top" Width="96" Click="removeButton_Click"/>
        <TextBox x:Name="usernameText" HorizontalAlignment="Left" Height="23" Margin="109,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
